# Core application auth shared by the scanner dashboard and API middleware
API_KEY=change-me-in-production
NEXT_PUBLIC_API_KEY=demo-api-key

AUTH_USERNAME=admin
AUTH_PASSWORD=admin
AUTH_SECRET=change-me

# Python binaries used for OCR, barcode decoding, and the optional local VLM service bridge
PYTHON_BIN=python3
OCR_PYTHON=

# OCR/VLM configuration (remote defaults)
OCR_MODEL=Qwen/Qwen3-VL-2B-Instruct
OCR_TIMEOUT_MS=180000
OCR_KEEP=0
OCR_SYSTEM_PROMPT=
OCR_HINT_TEXT=

# Optional local VLM bridge overrides
OCR_LOCAL_MODEL_ID=
OCR_LOCAL_DTYPE=auto
OCR_LOCAL_DEVICE_MAP=auto
OCR_LOCAL_MAX_NEW_TOKENS=512
OCR_LOCAL_ATTN_IMPLEMENTATION=
OCR_LOCAL_FLASH_ATTENTION=0
OCR_LOCAL_SERVICE_HOST=127.0.0.1
OCR_LOCAL_SERVICE_PORT=5117
OCR_LOCAL_SERVICE_READY_TIMEOUT_MS=120000
OCR_LOCAL_SERVICE_TIMEOUT_MS=120000
OCR_LOCAL_SERVICE_STOP_TIMEOUT_MS=10000
OCR_LOCAL_SERVICE_HEALTH_PATH=/health
OCR_LOCAL_SERVICE_INFER_PATH=/infer
OCR_LOCAL_CHECK_TIMEOUT_MS=60000

# Remote provider credentials (set as needed)
HF_TOKEN=
OPENAI_API_KEY=
AZURE_OPENAI_API_KEY=
VLM_MODE=
VLM_REMOTE_CONFIG=

# Barcode worker configuration
BARCODE_TIMEOUT_MS=30000
BARCODE_MATCH_TIMEOUT_MS=30000
